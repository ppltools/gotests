{{define "function"}}
{{- $f := .}}

func {{.TestName}}(t *testing.T) {
    {{- if or .ReturnsError (ne (len .TestResults) 0) }}
        {{- if .AllowError -}}
            should := assert.New(t)
        {{- else -}}
            should := require.New(t)
        {{- end -}}
    {{- end -}}
	{{- with .Receiver}}
		{{- if .IsStruct}}
			{{- if .Fields}}
				type fields struct {
				{{- range .Fields}}
					{{Field .}} {{.Type}}
				{{- end}}
				}
			{{- end}}
		{{- end}}
	{{- end}}
	{{- if .TestParameters}}
	type args struct {
		{{- range .TestParameters}}
				{{Param .}} {{.Type}}
		{{- end}}
	}
	{{- end}}
	tests := []struct {
		name string
		{{- with .Receiver}}
			{{- if and .IsStruct .Fields}}
				fields fields
			{{- else}}
				{{Receiver .}} {{.Type}}
			{{- end}}
		{{- end}}
		{{- if .TestParameters}}
			args args
		{{- end}}
		{{- range .TestResults}}
			{{Want .}} {{.Type}}
		{{- end}}
		{{- if .ReturnsError}}
			wantErr bool
		{{- end}}
	}{
		// TODO: Add test cases.
	}
	for {{if not .IsNaked}} _, tt := {{end}} range tests {
        {{- if .Subtests }}t.Run(tt.name, func(t *testing.T) { {{- end -}}
			{{- with .Receiver}}
				{{- if .IsStruct}}
					{{Receiver .}} := {{if .Type.IsStar}}&{{end}}{{.Type.Value}}{
					{{- range .Fields}}
						{{.Name}}: tt.fields.{{Field .}},
					{{- end}}
					}
				{{- end}}
			{{- end}}
			{{- range .Parameters}}
				{{- if .IsWriter}}
					{{Param .}} := &bytes.Buffer{}
				{{- end}}
			{{- end}}
			{{- if and (not .OnlyReturnsError) (not .OnlyReturnsOneValue) }}
				{{template "results" $f}} {{template "call" $f}}
			{{- end}}
			{{- if .ReturnsError}}
				{{if .OnlyReturnsError}} err := {{template "call" $f}} {{end}}
				should.Equal(tt.wantErr, err != nil,
				    fmt.Sprintf("{{template "message" $f}} wantErr %v, error = %v", {{template "inputs" $f}} tt.wantErr, err))
			{{- end}}
			{{- range .TestResults}}
				{{- if .IsWriter}}
					{{Got .}} := {{Param .}}.String()
				{{- else if .IsBasicType}}
					{{if $f.OnlyReturnsOneValue}}{{Got .}} := {{template "inline" $f}} {{end}}
				{{- else}}
					{{if $f.OnlyReturnsOneValue}}{{Got .}} := {{template "inline" $f}} {{end}}
				{{- end}}
				should.Equal(tt.{{Want .}}, {{Got .}},
				    fmt.Sprintf("{{template "message" $f}} want %v, {{if $f.ReturnsMultiple}}{{Got .}} {{end}}= %v", {{template "inputs" $f}} tt.{{Want .}}, {{Got .}}))
			{{- end}}
		{{- if .Subtests }} }) {{- end -}}
	}
}

{{end}}
